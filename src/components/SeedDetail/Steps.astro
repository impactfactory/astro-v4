---
import { Picture } from "@astrojs/image/components";
const { s, step, index } = Astro.props;
---

<div>
  <ul class="firstlevel">
    <li>
      <h4>
        {index + 1 + ": " + step.title}
      </h4>
      <div class="body">
        <div class="img">
          {
            step.img && (
              <Picture
                alt={"Thumbnail " + step.title}
                aspectRatio="1:1"
                background="#ddd"
                class="thumbnail"
                fit="cover"
                formats={["avif", "webp", "jpeg"]}
                height="100px"
                sizes={"(max-width: 1400px) 100px,100px"}
                src={"/images/" + s.slug.substr(3) + "/" + step.img}
                position="center"
                width="100px"
                widths={[100, 200]}
                style="width:100px;max-width:100px"
              />
            )
          }
        </div>
        <div class="desc">
          <p>{step.desc}</p>
          <ul class="secondlevel">
            {step.substeps.map((sub: string) => <li>{sub}</li>)}
          </ul>
        </div>
      </div>
    </li>
  </ul>
</div>

